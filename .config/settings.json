    "LOGGING": {
        "disable_existing_loggers": false,
        "formatters": {
            "simple": {
                "format": "%(levelname)s %(message)s"
            },
            "verbose": {
                "datefmt": "%d/%b/%Y %H:%M:%S",
                "format": "[%(asctime)s] %(levelname)s [%(name)s:%(lineno)s] %(message)s"
            },
            "syslog": {
                "format": "severity=%(levelname)s %(asctime)s %(message)s module=%(module)s line=%(lineno)s"
            }
        },
        "handlers": {
            "error": {
                "class": "logging.FileHandler",
                "filename": "../logs/error.log",
                "formatter": "verbose",
                "level": "ERROR"
            },
            "access": {
                "class": "logging.FileHandler",
                "filename": "../logs/debug.log",
                "formatter": "verbose",
                "level": "DEBUG"
            },
            "syslog": {
                "class": "logentries.LogentriesHandler",
                "formatter": "syslog",
                "level": "DEBUG",
                "token": "REPLACE_ME"
            }
        },
        "loggers": {
            "rpg": {
                "handlers": [
                    "error",
                    "access",
                    "syslog"
                ],
                "level": "DEBUG"
            },
            "django": {
                "handlers": [
                    "error",
                    "access",
                    "syslog"
                ],
                "level": "DEBUG",
                "propagate": true
            },
            "django.request": {
                "handlers": [
                    "error",
                    "access",
                    "syslog"
                ],
                "level": "DEBUG",
                "propagate": false
            }
        },
        "version": 1
    }
